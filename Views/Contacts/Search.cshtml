@model UserSearchViewModel
@inject UserManager<DBApplicationUser> UserManager
@inject ApplicationDbContext _context
@{
    ViewData["Title"] = "Пошук контактів";
    var currentUser = await UserManager.GetUserAsync(User);
    var currentUserId = currentUser?.Id;
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<h2>@ViewData["Title"]</h2>
<form method="get" asp-action="Search" asp-controller="Contacts">
    <div class="form-group">
        <div class="input-group">
            <input type="text"
                   class="form-control"
                   placeholder="Шукати за ім'ям, прізвищем або ім'ям користувача..."
                   asp-for="SearchTerm" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Пошук
                </button>
            </div>
        </div>
    </div>
</form>

<!-- Display search results -->
@if (Model.Users.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ім'я</th>
                <th>Прізвище</th>
                <th>Ім'я користувача</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                var existingRequest = _context.Contacts
                .FirstOrDefault(c => c.UserId == currentUserId && c.ContactUserId == user.Id || c.UserId == user.Id && c.ContactUserId == currentUserId);
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.UserName</td>
                    <td>
                        @if (@user.Id != currentUserId)
                        {
                            @if (existingRequest == null)
                            {
                                <form method="post" asp-action="AddContactFromSearch" asp-controller="Contacts">
                                    <input type="hidden" name="userName" value="@user.UserName" />
                                    <button type="submit" class="btn btn-primary btn-sm">
                                        <i class="fas fa-user-plus"></i> Надіслати запит
                                    </button>
                                </form>
                            }
                            else if (existingRequest.IsAccepted)
                            {
                                <span class="text-success">Твій контакт</span>
                            }
                            else if (!existingRequest.IsAccepted)
                            {
                                <span class="text-info">Запит надіслано</span>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else if (!string.IsNullOrEmpty(Model.SearchTerm))
{
    <p class="text-muted">No users found matching your search criteria.</p>
}