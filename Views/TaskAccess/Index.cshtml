@using System.Security.Claims
@model TaskAccessViewModel
@inject UserManager<DBApplicationUser> UserManager

@{
    ViewData["Title"] = $"Manage Access - {Model.TaskName}";
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<div class="container">
    <h2>Керування доступом для завдання: @Model.TaskName</h2>

    <div class="row">
        <div class="col-md-6">
            <h4>Надати доступ новому користувачеві</h4>

            @if (Model.AvailableContacts.Any())
            {
                <form asp-action="GrantAccess" method="post">
                    <input type="hidden" name="taskId" value="@Model.TaskId" />
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="selectedUserId">Виберіть користувача, якому потрібно надати доступ:</label>
                        <select name="selectedUserId" class="form-control" required>
                            <option value="">-- Виберіть користувача --</option>
                            @foreach (var contact in Model.AvailableContacts)
                            {
                                var user = UserManager.FindByIdAsync(contact.UserId).Result;
                                <option value="@contact.UserId">@user.FirstName @user.LastName / @user.UserName</option>
                            }
                        </select>
                    </div>

                    <button type="submit" class="btn btn-success mt-2">Надати доступ</button>
                </form>
            }
            else
            {
                <div class="alert alert-info">
                    Немає доступних контактів для надання доступу. Усі ваші контакти вже мають доступ, або у вас немає контактів.
                </div>
            }
        </div>

        <div class="col-md-6">
            <h4>Поточні користувачі з доступом</h4>

            @if (Model.CurrentAccessUsers.Any())
            {
                <div class="list-group">
                    @foreach (var user in Model.CurrentAccessUsers)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>@user.DisplayName</span>
                            <form asp-action="RemoveAccess" method="post" style="display: inline;">
                                <input type="hidden" name="taskId" value="@Model.TaskId" />
                                <input type="hidden" name="userId" value="@user.UserId" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm"
                                        @(user.UserId == currentUserId ? "disabled" : "")
                                        onclick="return confirm('Are you sure you want to remove access for @user.DisplayName?')">
                                    Видалити
                                </button>
                            </form>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    No users currently have access to this task.
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Назад до завдань</a>
    </div>
</div>