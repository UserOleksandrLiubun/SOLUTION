@model UserSearchViewModel
@inject UserManager<ApplicationUser> UserManager
@inject ApplicationDbContext _context
@{
    ViewData["Title"] = "Searhc Contacts";
    var currentUser = await UserManager.GetUserAsync(User);
    var currentUserId = currentUser?.Id;
}

<h2>@ViewData["Title"]</h2>
<form method="get" asp-action="Index" asp-controller="Search">
    <div class="form-group">
        <div class="input-group">
            <input type="text"
                   class="form-control"
                   placeholder="Search by first name, last name, or username..."
                   asp-for="SearchTerm" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
        </div>
    </div>
</form>

<!-- Display search results -->
@if (Model.Users.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Username</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                var existingRequest = _context.Contacts
                .FirstOrDefault(c =>
                c.UserId == currentUserId && c.ContactUserId == user.Id);
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.UserName</td>
                    <td>
                        @if (@user.Id != currentUserId)
                        {
                            @if (existingRequest == null)
                            {
                                <form method="post" asp-action="Add" asp-controller="Contacts">
                                    <input type="hidden" name="userName" value="@user.UserName" />
                                    <button type="submit" class="btn btn-primary btn-sm">
                                        <i class="fas fa-user-plus"></i> Send Request
                                    </button>
                                </form>
                            }
                            else if (existingRequest.IsAccepted)
                            {
                                <span class="text-success">Already Contacts</span>
                            }
                            else if (!existingRequest.IsAccepted)
                            {
                                <span class="text-info">Request Sent</span>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else if (!string.IsNullOrEmpty(Model.SearchTerm))
{
    <p class="text-muted">No users found matching your search criteria.</p>
}