@model IEnumerable<DBVote>
@{
    ViewData["Title"] = "My Votes";
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

<h2>My Votes</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Vote</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.StartDateTime.ToString("g")</td>
                <td>@item.EndDateTime.ToString("g")</td>
                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <a asp-action="Evaluate" asp-route-id="@item.Id" class="btn btn-success">Evaluate</a>
                        <a asp-action="Results" asp-route-id="@item.Id" class="btn btn-info">Results</a>
                        @if (item.UserId == currentUserId)
                        {
                            <button type="submit" class="btn btn-danger">Remove</button>
                        }
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>