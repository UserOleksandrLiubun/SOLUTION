@model CreateVoteViewModel
@inject UserManager<DBApplicationUser> UserManager
@{
    ViewData["Title"] = "Create New Vote";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (ViewBag.WeightError != null)
{
    <div class="alert alert-danger">@ViewBag.WeightError</div>
}

<h2>Створити голосування</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input type="checkbox" asp-for="IsPrivate" class="form-check-input" />
        <label asp-for="IsPrivate" class="form-check-label"></label>
        <span asp-validation-for="IsPrivate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="StartDateTime" class="control-label"></label>
                <input asp-for="StartDateTime" class="form-control" />
                <span asp-validation-for="StartDateTime" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="EndDateTime" class="control-label"></label>
                <input asp-for="EndDateTime" class="form-control" />
                <span asp-validation-for="EndDateTime" class="text-danger"></span>
            </div>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="UsersIDs" class="control-label"></label>
        <div class="border rounded p-3" style="max-height: 200px; overflow-y: auto; background-color: white;">
            @foreach (var contact in Model.Contacts)
            {
                <div class="form-check user-select-item" data-value="@contact.Value">
                    <input class="form-check-input" type="checkbox" id="user_@contact.Value"
                           name="UsersIDs" value="@contact.Value"
                           @(contact.Selected || Model.UsersIDs.Any(item => item == contact.Value) ? "checked" : "") />
                    <label class="form-check-label" for="user_@contact.Value">
                        @contact.Text
                    </label>
                </div>
            }
        </div>
        <input type="hidden" asp-for="UsersIDs" id="selectedUsersInput" />
        <span asp-validation-for="UsersIDs" class="text-danger"></span>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const userItems = document.querySelectorAll('.user-select-item');
            const hiddenInput = document.getElementById('selectedUsersInput');

            function updateSelectedUsers() {
                const checkboxes = document.querySelectorAll('input[name="UsersIDs"]:checked');
                const selectedValues = Array.from(checkboxes).map(cb => cb.value);
                hiddenInput.value = selectedValues.join(',');
            }

            userItems.forEach(item => {
                const checkbox = item.querySelector('input[type="checkbox"]');
                const label = item.querySelector('label');

                // Toggle on item click (anywhere in the div)
                item.addEventListener('click', function(e) {
                    if (e.target !== checkbox && e.target !== label) {
                        checkbox.checked = !checkbox.checked;
                        updateSelectedUsers();
                    }
                });

                // Update on direct checkbox click
                checkbox.addEventListener('change', updateSelectedUsers);
            });

            // Initialize hidden field value
            updateSelectedUsers();
        });
    </script>

    <h4>Альтернативи</h4>
    <div id="alternatives-container">
        @for (int i = 0; i < Model.Alternatives.Count; i++)
        {
            <div class="alternative-item border p-3 mb-3">
                <h5>Альтернатива @(i + 1)</h5>
                <div class="form-group">
                    <label class="control-label">Назва</label>
                    <input asp-for="Alternatives[i]" class="form-control" />
                    <span asp-validation-for="Alternatives[i]" class="text-danger"></span>
                </div>
            </div>
        }
    </div>
    <div class="form-group mb-3">
        <button type="button" id="add-alternative" class="btn btn-secondary">Додати альтернативу</button>
    </div>
    <h4>Критерії оцінювання</h4>
    <div id="criteria-container">

    </div>

    <div class="form-group">
        <button type="button" id="add-criteria" class="btn btn-secondary">Додати критерій</button>
        <input type="submit" value="Створити" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <script>
        // Add Alternative functionality
        document.getElementById('add-alternative').addEventListener('click', function() {
            const container = document.getElementById('alternatives-container');
            const index = container.children.length;

            const newAlternative = `
                <div class="alternative-item border p-3 mb-3">
                    <h5>Альтернатива ${index + 1}</h5>
                    <div class="form-group">
                        <label class="control-label">Назва</label>
                        <input name="Alternatives[${index}]" class="form-control" />
                    </div>
                </div>
            `;

            container.insertAdjacentHTML('beforeend', newAlternative);
        });

        document.getElementById('add-criteria').addEventListener('click', function() {
            const container = document.getElementById('criteria-container');
            const index = container.children.length;

            const newCriteria = `
                <div class="criteria-item border p-3 mb-3">
                    <h5>Критерій ${index + 1}</h5>
                    <div class="form-group">
                        <label class="control-label">Назва</label>
                        <input name="Criteria[${index}].Title" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Опис</label>
                        <textarea name="Criteria[${index}].Description" class="form-control"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Важливість</label>
                                <input name="Criteria[${index}].Importance" class="form-control" value="" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Мінімальне значення</label>
                                <input name="Criteria[${index}].MinValue" class="form-control" value="0" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Максимальне значення</label>
                                <input name="Criteria[${index}].MaxValue" class="form-control" value="10" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Criteria[i].StepValue" class="control-label">Крок</label>
                                <input asp-for="Criteria[i].StepValue" class="form-control" value="0" />
                                <span asp-validation-for="Criteria[i].StepValue" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            `;

            container.insertAdjacentHTML('beforeend', newCriteria);
        });
    </script>
}